<h1>Edit an Album</h1>

<form action="<%= album_url(@album) %>" method="post">
  <input type='hidden' name='_method' value='PATCH'>
  <label for="title">Title:</label>
  <input id="title" type="text" name="album[title]" value= '<%= @album.title %>'>

  <br>
  <label for="band">Band:</label>
  <select id="band" name=album[band_id]>
    <% Band.all.each do |band|  %>
    <option value=" <%= band.id %>" <%= 'selected' if band.id == @album.band_id %> > <%= band.name %></option>
    <% end %>


  </select>

  <br>
  <input type="radio" name="album[album_type]" value="studio"
  <%= 'checked' if @album.album_type == 'studio' %> >Studio
  <input type="radio" name="album[album_type]" value="live">
  <%= 'checked' if @album.album_type == 'live' %>Live

  <br>
  <input type="submit" value="Edit Album">
</form>
